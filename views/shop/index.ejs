<%- include('../includesEjs/head.ejs')%>
    <link rel="stylesheet" href="/shop.css">
    </head>

    <body>
        <%- include('../includesEjs/navigation.ejs') %>
            <main>
                <h1>(:All Products :)</h1>
                <% if(hasProducts){ %>
                    <div class="grid">
                        <% for(prod in products) {%>
                            <article class="card product-item">
                                <header class="card__header">
                                    <h1 class="product__title">
                                        <%=products[prod].title%>
                                    </h1>
                                </header>
                                <div class="card__image">
                                    <img src="https://thumbs.dreamstime.com/b/old-book-flying-letters-magic-light-background-bookshelf-library-ancient-books-as-symbol-knowledge-history-218640948.jpg"
                                        alt="The book">
                                </div>
                                <div class="card__content">
                                    <h2 class="product__price">$20.99</h2>
                                    <p class="product__description">A very interesting book about so many mythology,
                                        traditions
                                        and
                                        much
                                        more!</p>
                                </div>
                                <div class="card__actions">
                                    <button class="btn">Add to Cart</button>
                                </div>
                            </article>
                            <%}%>
                    </div>
                    <%} else{%>

                        <h1>No Products Exist here...</h1>

                        <%}%>

            </main>
            <%- include('../includesEjs/end.ejs') %>