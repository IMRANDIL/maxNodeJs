<%- include('../includesEjs/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includesEjs/navigation.ejs') %>

            <main>
                <form class="product-form" action="/add-product" method="POST">
                    <div class="form-control">
                        <label for="title">Title</label>
                        <input type="text" name="title" id="title" required>
                    </div>
                    <div class="form-control">
                        <label for="imageUrl">Image URL</label>
                        <input type="text" name="imageUrl" id="imageUrl" autocomplete="off" required>
                    </div>
                    <div class="form-control">
                        <label for="price">Price</label>
                        <input type="number" name="price" id="price" step="0.01" required>
                    </div>
                    <div class="form-control">
                        <label for="description">Description</label>
                        <textarea name="desc" id="description" rows="5" required></textarea>
                    </div>

                    <button class="btn" type="submit">Add Product</button>
                </form>
            </main>
            <%- include('../includesEjs/end.ejs') %>