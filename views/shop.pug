doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{docTitle}
        link(rel="stylesheet", href="/css/shop.css")
    body        
        header.main-header 
            nav.navbar
                ul.list 
                    li.list-item 
                        a.active(href="/") Shop 
                    li.list-item 
                        a(href="/add-product") Add Products 

        main
            h1 (: All Products :) 
            if products.length > 0
                .grid
                    each product in products                                    
                        article.card.product-item 
                            header.card__header 
                                h1.product__title #{product.title} 

                            div.card__image 
                                img(src="https://thumbs.dreamstime.com/b/old-book-flying-letters-magic-light-background-bookshelf-library-ancient-books-as-symbol-knowledge-history-218640948.jpg", alt="The Book")  
                            .card__content 
                                h2.product__price $20.99
                                p.product__description A very interesting book about so many mythology, traditions and much more!
                            .card__actions 
                                button.btn Add to Cart                          
            else
                h1 No Products Exist here...!!